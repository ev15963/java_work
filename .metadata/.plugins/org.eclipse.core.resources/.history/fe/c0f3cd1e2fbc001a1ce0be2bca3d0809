package com.lsw;

public class EMPMainClass {
	public static void main(String[] args) {
		int[] age = { 27, 34, 28, 26, 41, 28, 42, 29, 29, 32 };
		int[] pay = { 460, 200, 250, 300, 300, 200, 350, 200, 400, 440 };
		String[] code = { "JP", "FR", "JP", "US", "CN", "DE", "KR", "JP", "DE", "KR" };
		// 국내에 근무하는 인원 수
		// code배열/ 인원수(int count=0)
		// 인원수 : code 배열의 값들 중 "KR"과 같은 지를 비교
		// 비교 : if(){ }
		// if(code[0].equals("KR")) { count++; }
		// if(code[0].equals("KR")) { count++; }

		int count = 0;
		for (int i = 0; i < code.length; i++) {
			if (code[i].equals("KR")) {
				count++; // count=count+1
			}
		}
		System.out.println("국내 근무자 수 : " + count);
		// 국내 근무자의 급여합
		// 필요 자원 : code 배열 / pay 배열
		// 필요 구문 : for(){}/if(){}
		// 필요 변수 : int sum=0;
		// 합 구하기 : sum=sum+pay[i]

		int sum = 0;
		String c = "KR";
		for (int i = 0; i < code.length; i++) {
			if (code[i].equals(c)) {
				sum = sum + pay[i];
			}
		}
		System.out.println("국내 근무자 급여 합:" + sum);
		// 국내 근무자의 평균급여
		double avg = (sum * 1.0) / count;
		System.out.println("국내 근무자 급여 평균:" + avg);
		// System.out.println("국내 근무자 급여 평균:"+(sum/code.length));

		String[] name = { "PJH", "JDW", "AJH", "HST", "HTW", "LWS", "LSD", "YJH", "JSW", "LKO" };
		// 국내 근무자의 명단을 출력 하시오
		// 출력 형식 : LSD, LKO
		int[] num = new int[2];
		for (int i = 0; i < code.length; i++) {
			if (code[i].equals(c)) {
				System.out.print(name[i]+" ");
			}
		}
		System.out.println();
	}
}
